{
    "name": "rossato/declarative-php",
    "description": "A micro-framework for building declarative and static web applications in PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Guilherme Rossato",
            "email": "guilhermrossato@gmail.com"
        }
    ],
    "scripts": {
        "test": "phpunit --bootstrap ./vendor/autoload.php tests",
        "test-coverage": "phpunit --bootstrap ./vendor/autoload.php --coverage-text tests",
        "lint": "phpcs --standard=./coding-standard-ruleset.xml ./src",
        "lint-fix": "phpcbf --standard=./coding-standard-ruleset.xml ./checkout"
    },
    "require": {
        "php": ">=5.3.0"
    },
    "autoload": {
        "psr-0": {
            "Rossato": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^3.4"
    }
}
